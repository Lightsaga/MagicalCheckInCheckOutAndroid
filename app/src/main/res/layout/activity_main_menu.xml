<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="school.gpsandroiddad.MainMenuActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Check In"
        android:id="@+id/btnCheckIn"
        android:onClick="OnClick"
        android:layout_above="@+id/btnCheckOut"
        android:layout_alignLeft="@+id/btnCheckOut"
        android:layout_alignStart="@+id/btnCheckOut" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Check out"
        android:id="@+id/btnCheckOut"
        android:onClick="OnClick"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/btnRecord"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:id="@+id/btnRecord"
        android:onClick="OnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/btnLogout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/welcomeMessage"
        android:id="@+id/txtViewWelcome"
        android:layout_below="@+id/btnLogout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold|italic"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bienvenido Usuario!"
        android:id="@+id/txtViewUser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
